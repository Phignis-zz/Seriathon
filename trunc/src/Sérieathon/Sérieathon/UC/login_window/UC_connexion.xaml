<UserControl x:Class="Sérieathon.UC_connexion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sérieathon"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    
    <Grid Margin="0 30 0 0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Text="Bonjour!" Background="White" TextAlignment="Center"
                   VerticalAlignment="Bottom" Margin="20"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Pseudo / Adresse e-mail" Background="White"
                   VerticalAlignment="Bottom"/>
        <TextBox x:Name="login_textbox" Grid.Row="2" Grid.Column="1"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="Mot de passe" Background="White"
                   VerticalAlignment="Bottom"/>
        <PasswordBox x:Name="password_textbox" Grid.Row="4" Grid.Column="1"/>

        <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Content="Valider"
                Width="60" Height="30" Click="Validation_connexion_click"/>
    </Grid>
</UserControl>
