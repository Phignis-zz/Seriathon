<UserControl x:Class="Sérieathon.UC.main_window.Marathon.Creation_marathon.UC_NouveauMarathon1_5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sérieathon.UC.main_window.Marathon.Creation_marathon"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="0" Text="Nouveau marathon" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Nom du marathon" VerticalAlignment="Bottom"/>
        <TextBox Grid.Column="1" Grid.Row="2" Height="25" Width="300" Margin="0" x:Name="NomMarathon" HorizontalAlignment="Left"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Temps passé par jour" VerticalAlignment="Bottom"/>
        <ComboBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center"  Width="130" HorizontalAlignment="Left" x:Name="TempsParJour">
            <ComboBoxItem>1 heure</ComboBoxItem>
            <ComboBoxItem>2 heures</ComboBoxItem>
            <ComboBoxItem>3 heures</ComboBoxItem>
            <ComboBoxItem>4 heures</ComboBoxItem>
            <ComboBoxItem>5 heures</ComboBoxItem>
            <ComboBoxItem>6 heures</ComboBoxItem>
            <ComboBoxItem>7 heures</ComboBoxItem>
            <ComboBoxItem>8 heures</ComboBoxItem>
            <ComboBoxItem>9 heures</ComboBoxItem>
            <ComboBoxItem>10 heures</ComboBoxItem>
            <ComboBoxItem>11 heures</ComboBoxItem>
            <ComboBoxItem>12 heures</ComboBoxItem>
        </ComboBox>
        <TextBlock Grid.Column="1" Grid.Row="5" Text="Nombre de jour" VerticalAlignment="Bottom"/>
        <ComboBox Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Width="130" HorizontalAlignment="Left" x:Name="NombreDeJour">
            <ComboBoxItem>1 jour</ComboBoxItem>
            <ComboBoxItem>2 jours</ComboBoxItem>
            <ComboBoxItem>3 jours</ComboBoxItem>
            <ComboBoxItem>4 jours</ComboBoxItem>
            <ComboBoxItem>5 jours</ComboBoxItem>
            <ComboBoxItem>6 jours</ComboBoxItem>
            <ComboBoxItem>7 jours</ComboBoxItem>
            <ComboBoxItem>8 jours</ComboBoxItem>
            <ComboBoxItem>9 jours</ComboBoxItem>
            <ComboBoxItem>10 jours</ComboBoxItem>
            <ComboBoxItem>11 jours</ComboBoxItem>
            <ComboBoxItem>12 jours</ComboBoxItem>
            <ComboBoxItem>13 jours</ComboBoxItem>
            <ComboBoxItem>2 semaines</ComboBoxItem>
            <ComboBoxItem>3 semaines</ComboBoxItem>
            <ComboBoxItem>4 semaines</ComboBoxItem>
        </ComboBox>
        <Button Click="NM1_Next_Button_Click" Grid.Column="2" Grid.Row="7" Style="{StaticResource ButtonValider}">
            <WrapPanel>
                <Image Source="../../../../image/confirm.png" Width="30" HorizontalAlignment="Left"/>
                <TextBlock Text=" Suivant" VerticalAlignment="Center"/>
            </WrapPanel>
        </Button>

    </Grid>
</UserControl>
