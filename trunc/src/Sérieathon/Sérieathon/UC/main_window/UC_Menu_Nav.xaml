<UserControl x:Class="Sérieathon.UC_Menu_Nav"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sérieathon"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#171717">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="image/logo/seriathon.png"/>
        <Button Grid.Row="1" Content="Accueil" Height="20" Width="70" VerticalAlignment="Bottom"/>
        <Button Grid.Row="2" Content="Marathon" Height="20" Width="80" VerticalAlignment="Bottom"/>
        <Button Grid.Row="3" Content="Profil" Height="20" Width="60" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
